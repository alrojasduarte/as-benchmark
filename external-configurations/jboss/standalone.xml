<!-- Include the datasource and driver elements in the correct section of jboss standalone.xml file -->

<datasource jta="false" jndi-name="java:/ds" pool-name="postgresDS"
	enabled="true" use-java-context="true" use-ccm="false">
	<connection-url>jdbc:postgresql://localhost:5432/as-benchmark
	</connection-url>
	<driver-class>org.postgresql.Driver</driver-class>
	<driver>postgresql</driver>
	<pool>
		<min-pool-size>2</min-pool-size>
		<max-pool-size>20</max-pool-size>
	</pool>
	<security>
		<user-name>as-benchmark</user-name>
		<password>as-benchmark</password>
	</security>
</datasource>

<driver name="postgresql" module="org.postgresql">
	<xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
</driver>